@using AdminSiteNew.PokemonHelper
@model AdminSiteNew.Models.GTSObject

<style>
    th, td {
        padding: 3px!important;
    }
</style>

<table class="table border" style="max-width: 200px; display: inline-table;     margin: 10px 10px;">
    <tr>
        <td colspan="4">
            <img src=@Utilities.GetPokemonImageName((int)Model.Offer.species, Model.Offer.isShiny)
                 title=@Utilities.GetPokemonImageTitle((int)Model.Offer.species, Model.Offer.isShiny) />
        </td>
    </tr>
    <tr>
        <th colspan="2">
            Offer
        </th>
        <th colspan="2">
            Request
        </th>
    </tr>
    <tr>
        <th>
            Owner
        </th>
        <td>
            @Html.ActionLink(Model.OwnerName, "Users", "Users", new {id = Model.OwnerName}, null)
        </td>
        <th>
            Species
        </th>
        <td>
            @PokemonHelper.GetPokemonName((short)Model.Request.Species)
        </td>
    </tr>
    <tr>
        <th>
            Level
        </th>
        <td>
            @Model.Offer.level
        </td>
        <th>
            Gender
        </th>
        <td>
            @Model.Request.Gender
        </td>
    </tr>
    <tr>
        <th>
            Pkmn Id
        </th>
        <td>
            @Model.Offer.personalID
        </td>
        <th>
            MinLevel
        </th>
        <td>
            @Model.Request.MinLevel
        </td>
    </tr>
    <tr>
        <th>
            OT
        </th>
        <td>
            @Model.Offer.ot
        </td>
        <th>
            Nature
        </th>
        <td>
            @Model.Request.Nature
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <button class="button warning" onclick="location.href='@Url.Action("Remove", "GTS", new { id = Model.Id })'">Remove</button>
        </td>
        <td colspan="2">
            <button class="button success" onclick="location.href='@Url.Action("Detail", "GTS", new { id = Model.Id })'">Details</button>
        </td>
    </tr>
</table>