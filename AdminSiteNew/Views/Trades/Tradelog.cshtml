            </td>
        </tr>
        <tr>
            <td>
                @MoveHelper.GetMoveName(Model.Pokemon2.moves[1].id)
            </td>
        </tr>
        <tr>
            <td>
                @MoveHelper.GetMoveName(Model.Pokemon2.moves[2].id)
            </td>
        </tr>
        <tr>
            <td>
                @MoveHelper.GetMoveName(Model.Pokemon2.moves[3].id)
            </td>
        </tr>
        <tr>
            <th>
                Species
            </th>
            <td>
                @PokemonHelper.GetPokemonName(Model.Pokemon2.species)
            </td>
            <th colspan="2">
                IV/EV
            </th>
        </tr>
        <tr>
            <th>
                Shiny
            </th>
            <td>
                @Model.Pokemon2.isShiny
            </td>
            <th>
                HP
            </th>
            <td>
                @Model.Pokemon2.iv[0] / @Model.Pokemon2.ev[0]
            </td>
        </tr>
        <tr>
            <th>
                Item
            </th>
            <td>
                @ItemHelper.GetItemName((short) Model.Pokemon2.item)
            </td>
            <th>
