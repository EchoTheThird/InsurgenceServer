@using AdminSiteNew.Models
@using AdminSiteNew.PokemonHelper
@model WonderTrade

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Tradelog";
}

<link rel="stylesheet" href="/CSS/Tradelog.css" />
<table class="dataTable border bordered table-striped">
    <tr>
        <th>
            ID
        </th>
        <td>
            @Model.Id
        </td>
    </tr>
    <tr>
        <th>
            User 1
        </th>
        <td>
            @Model.User
        </td>
    </tr>
    <tr>
        <th>
            Date/Time
        </th>
        <td>
            @Model.Date
        </td>
    </tr>
</table>
<table class="table border" style="display: inline-table;">
    <tr>
        <th>Owner Name</th>
        <td>@Html.ActionLink(Model.User, "Users", "Users", new { id = Model.User }, null)</td>
        <th>ID</th>
        <td>@Model.Pokemon.personalID</td>
    </tr>
    <tr>
        <td colspan="2" rowspan="4">
            <img src="@Utilities.GetPokemonImageName(Model.Pokemon.species, Model.Pokemon.isShiny)"
                 title="@Utilities.GetPokemonImageTitle(Model.Pokemon.species, Model.Pokemon.isShiny)" alt=""/>
        </td>
        <td rowspan="4">
            Moves
        </td>
        <td>
            @MoveHelper.GetMoveName(Model.Pokemon.moves[0].id)
        </td>
    </tr>
    <tr>
        <td>
            @MoveHelper.GetMoveName(Model.Pokemon.moves[1].id)
        </td>
    </tr>
    <tr>
        <td>
            @MoveHelper.GetMoveName(Model.Pokemon.moves[2].id)
        </td>
    </tr>
    <tr>
        <td>
            @MoveHelper.GetMoveName(Model.Pokemon.moves[3].id)
        </td>
    </tr>
    <tr>
        <th>
            Species
        </th>
        <td>
            @PokemonHelper.GetPokemonName(Model.Pokemon.species)
        </td>
        <th colspan="2">
            IV/EV
        </th>
    </tr>
    <tr>
        <th>
            Shiny
        </th>
        <td>
            @Model.Pokemon.isShiny
        </td>
        <th>
            HP
        </th>
        <td>
            @Model.Pokemon.iv[0] / @Model.Pokemon.ev[0]
        </td>
    </tr>
    <tr>
        <th>
            Item
        </th>
        <td>
            @ItemHelper.GetItemName((short)Model.Pokemon.item)
        </td>
        <th>
            Attack
        </th>
        <td>
            @Model.Pokemon.iv[1] / @Model.Pokemon.ev[1]
        </td>
    </tr>
    <tr>
        <th>
            OT
        </th>
        <td>
            @Model.Pokemon.ot
        </td>
        <th>
            Defense
        </th>
        <td>
            @Model.Pokemon.iv[2] / @Model.Pokemon.ev[2]
        </td>
    </tr>
    <tr>
        <th>
            Level
        </th>
        <td>
            @Model.Pokemon.level
        </td>
        <th>
            Sp. Attack
        </th>
        <td>
            @Model.Pokemon.iv[4] / @Model.Pokemon.ev[4]
        </td>
    </tr>
    <tr>
        <th>
            Nature
        </th>
        <td>
            @Model.Pokemon.nature
        </td>
        <th>
            Sp. Defense
        </th>
        <td>
            @Model.Pokemon.iv[5] / @Model.Pokemon.ev[5]
        </td>
    </tr>
    <tr>
        <th>
            Language
        </th>
        <td>
            @Model.Pokemon.language
        </td>
        <th>
            Speed
        </th>
        <td>
            @Model.Pokemon.iv[3] / @Model.Pokemon.ev[3]
        </td>
    </tr>
    <tr>
        <th>
            Map Obtained
        </th>
        <td>
            @Model.Pokemon.obtainMap
        </td>
        <th>
            Map Hatched
        </th>
        <td>
            @Model.Pokemon.hatchedMap
        </td>
    </tr>
</table>
