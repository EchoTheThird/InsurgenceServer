@using AdminSiteNew.Models
@using AdminSiteNew.PokemonHelper
@model RecentWonderTradesModel

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "WTLog";
}

<link rel="stylesheet" href="/CSS/Tradelog.css" />
<div style="padding-top:30px;">
    <table>
        @foreach (var trade in Model.Trades)
        {
            <tr>
                <td>
                    @trade.Date
                </td>
                <th>
                    @Html.ActionLink(trade.User, "Users", "Admin", new { id = trade.User }, null)
                </th>
                <td>
                    <table style="width:100%;     height: 50px;">
                        <tr>
                            <td style="width:32%; max-width:32%;">@PokemonHelper.GetPokemonName(trade.Pokemon.species)</td>
                            <td>@trade.Pokemon.personalID</td>  
                            @*@if (trade.Pokemon.Shiny)
                            {
                                <td class="shiny" style="max-width:10%; width:10%">Shiny</td>
                            }
                            else
                            {
                                <td class="nonshiny" style="max-width:10%; width:10%">Bland</td>
                            }*@
                            <td style="width:20%; max-width:20%">OT: @trade.Pokemon.ot</td>
                            <td style="width:38%; max-width:38%">Item: @ItemHelper.GetItemName((short)@trade.Pokemon.item)</td>
                        </tr>
                    </table>
                </td>
            </tr>}
    </table>
    @if (Model.StartIndex >= 100)
    {
        <input type="button" title="BanAccount" value="Previous" onclick="location.href='@Url.Action("RecentTrades", "Admin", new { id = Model.StartIndex - 100 })'" />
    }
    <input type="button" title="BanAccount" value="Next" onclick="location.href='@Url.Action("RecentTrades", "Admin", new { id = Model.StartIndex + 100 })'" />
</div>
