<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Insurgence Admin</title>
    <link rel="stylesheet" href="~/lib/metro/build/css/metro.min.css" />
    <link rel="stylesheet" href="~/lib/metro/build/css/metro-responsive.min.css" />
    <link rel="stylesheet" href="~/lib/metro/build/css/metro-icons.min.css" />
    <script src="~/lib/jquery.js"></script>
    <script src="~/lib/metro/build/js/metro.min.js"></script>
    <style>
        .container {
            margin-top: 50px;
        }
        fieldset {
                border-style: none;
        }
    </style>
</head>
<body>
@await Html.PartialAsync("Header");
<div style="max-width: 200px; margin-top: 40px; height: 100%; position: fixed;">
    @await Html.PartialAsync("UserSidebar");

</div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Deukhoofd</p>
        </footer>
    </div>
</body>
</html>
